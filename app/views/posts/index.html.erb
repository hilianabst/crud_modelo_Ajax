<p id="notice"><%= notice %></p>

<div class="container d-inline">
<%# inicio buscador %>
  <div class="float-right">
    <%=form_tag( posts_path,method: "get", remote:true, :class =>"form-inline") do %>
      <%= text_field_tag :search, params[:search], :placeholder =>"Buscar Post", :class=>"form-control"%>
    <%= submit_tag "buscar", class:"btn btn-primary ml-1"%>
    <% end %>
    
  </div>
<%# fin buscador  %>
<button type="button" class="btn btn-warning btn" data-toggle="modal" data-target="#modalNewPost">Agregar Post</button>
</div>

<%= form_with(model: @post, remote: true) do |form| %>
    <div class="modal fade" id="modalNewPost" tabindex="-1" role="dialog"  aria-hidden="true">
      <div class="modal-dialog role="document">
        <div class="modal-content">
         
          <div class="modal-header bg-warning">
            <h2 class="modal-title text-light">Nuevo post</h2>
            <button type="button" class="close" data-dismiss="modal" arial-label="Close">
              <span aria-hidden="true">&times;</span>
            <button>
          </div>

          <div class="modal-body">
                <div class="form-group">
                  <%= form.label :title %>
                  <%= form.text_field :title, :class => "form-control" %>
                </div>
                <div class="Form-group">
                  <%= form.label :content %>
                  <%= form.text_area :content,  :class => "form-control"%>
                </div>
          </div>

          <div class="modal-footer">
                <%= form.submit "guardar", :class => "btn btn-warning"%>
          </div>
       
        </div>
      </div>
    </div>
<% end %>
 

